

<div class="flex h-full flex-col overflow-y-scroll bg-white shadow-xl  max-w-screen-lg px-4 py-2 mx-auto">
  <div class="flex-1 overflow-y-auto py-2 px-4 sm:px-6">
    <div class="flex items-start justify-between">
      <h2 class="text-lg font-medium text-gray-900" id="slide-over-title">List of all your categories</h2>
    </div>

    <div class="mt-8">
      <div class="flow-root">
        <ul role="list" class="-my-6 divide-y divide-gray-200">
          <% @categories.each do |category| %>
            <li class="flex py-6">

              <div class="ml-4 flex flex-1 flex-col">
                <div>
                  <div class="flex justify-between text-base font-medium text-gray-900">
                    <div>
                      <h3><%= category.name %> </h3>
                      <span class="text-gray-500 text-sm">created on <%= category.created_at.strftime("%B %e, %Y")%> </span>
                    </div>
                  </div>
                </div>
              </div>

            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="py-6 px-4 sm:px-6">
      <div class="mt-6">
        <%= link_to 'Create Category', new_category_path, class: "flex items-center justify-center border border-transparent bg-secondColor px-6 py-3 text-base font-medium text-white shadow-sm" %>
      </div>
    </div>

  </div>        
</div>



